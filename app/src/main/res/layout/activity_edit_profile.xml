<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
   tools:context=".EditProfile">



    <Button
        android:id="@+id/changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:drawableStart="@drawable/ic_back"


        android:layout_marginStart="12dp"

         />

    <TextView
        android:id="@+id/me"
        android:layout_below="@id/changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Profile"
        android:textSize="26sp"
        android:gravity="start"
        android:textColor="@color/adminloginicon"
        android:fontFamily="@font/roboto"
        android:textFontWeight="500"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"/>
    <ImageView
        android:layout_below="@+id/me"
        android:layout_width="130dp"
        android:layout_height="4dp"
        android:background="@color/adminloginicon"
        android:layout_marginStart="15dp"/>

    <RelativeLayout
        android:layout_below="@+id/me"
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">




        <ImageView
            android:id="@+id/Editimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_photoq"
            android:padding="25dp"
            android:background="@drawable/rounded_btn"
            android:clickable="true"
            />



        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="50dp"
            android:foregroundGravity="center_vertical"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="0dp"
        android:padding="30dp"
